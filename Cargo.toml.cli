[workspace]
members = ["pylon-cli"]
resolver = "2"

[workspace.package]
authors = ["Dr. Yuno Rolfes <hello@pylonid.eu>"]
license = "MIT"
repository = "https://github.com/pylon-id/pylon"

[workspace.dependencies]
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
tokio = { version = "1.0", features = ["full"] }
axum = "0.7"
tower = "0.4"
tower-http = { version = "0.5", features = ["cors", "trace"] }
